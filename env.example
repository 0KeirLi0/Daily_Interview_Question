# .env.example
# This is a sample .env file for setting up environment variables.
# Replace the placeholder values with your own credentials.

# OpenAI API key (get from https://platform.openai.com/account/api-keys)
OPENAI_API_KEY="your_openai_api_key_here"

# OpenAI base URL (leave empty if using default, or specify custom URL)
OPENAI_BASE_URL=""

# Sender email address for sending daily questions
SENDER="your_email@gmail.com"

# Sender email password or app-specific password (e.g., Gmail app password)
PASSWORD="your_email_password_here"

# Receiver email address to receive daily questions
RECEIVER="email1@gmail.com, email2@gmail.com, email3@gmail.com"

# Assign LLM (optional)
MODEL=""